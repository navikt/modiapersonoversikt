{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
    "files": { "ignoreUnknown": true, "includes": ["**", "!**/*.module.css", "!**/reset.css"] },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "attributePosition": "auto",
        "bracketSpacing": true,
        "includes": ["**", "!**/*.gen.ts"]
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "nursery": {},
            "recommended": true,
            "suspicious": {
                "noArrayIndexKey": "warn"
            },
            "correctness": {
                "useExhaustiveDependencies": "warn"
            },
            "style": {
                "useConsistentCurlyBraces": "warn"
            }
        },
        "includes": ["**", "!**/build/", "!**/src/mock/mock-websocket.ts"]
    },
    "javascript": {
        "formatter": {
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "trailingCommas": "none",
            "quoteStyle": "single",
            "bracketSpacing": true
        },
        "globals": ["JSX", "React"]
    },
    "overrides": [
        {
            "includes": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.cts"],
            "linter": {
                "rules": {
                    "correctness": {
                        "noUndeclaredVariables": "error",
                        "noConstAssign": "off",
                        "noGlobalObjectCalls": "off",
                        "noInvalidBuiltinInstantiation": "off",
                        "noInvalidConstructorSuper": "off",
                        "noSetterReturn": "off",
                        "noUnreachable": "off",
                        "noUnreachableSuper": "off",
                        "noUnusedImports": "error",
                        "noUnusedVariables": "error"
                    },
                    "style": {
                        "useConst": "error"
                    },
                    "suspicious": {
                        "noClassAssign": "off",
                        "noDuplicateClassMembers": "off",
                        "noDuplicateObjectKeys": "off",
                        "noDuplicateParameters": "off",
                        "noFunctionAssign": "off",
                        "noImportAssign": "off",
                        "noRedeclare": "off",
                        "noUnsafeNegation": "off",
                        "useGetterReturn": "off",
                        "noVar": "error"
                    },
                    "complexity": {
                        "noArguments": "error"
                    }
                }
            }
        },
        {
            "includes": ["**/*.test.ts", "**/*.test.tsx", "**/setupTests.ts"],
            "javascript": {
                "globals": [
                    "expect",
                    "test",
                    "describe",
                    "it",
                    "beforeEach",
                    "beforeAll",
                    "vi",
                    "fail",
                    "assert",
                    "afterAll",
                    "afterEach"
                ]
            }
        }
    ]
}
